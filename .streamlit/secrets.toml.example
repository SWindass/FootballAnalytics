# Streamlit Cloud Secrets Template
# Copy to Streamlit Cloud dashboard: App Settings > Secrets
#
# IMPORTANT: Never commit secrets.toml to git!

# Database connection (Neon PostgreSQL)
# Get this from: Neon Console > Connection Details > Connection string
DATABASE_URL_SYNC = "postgresql://username:password@ep-xxx-xxx-123456.eu-west-2.aws.neon.tech/football?sslmode=require"

# For async operations (same as above but with asyncpg)
DATABASE_URL = "postgresql+asyncpg://username:password@ep-xxx-xxx-123456.eu-west-2.aws.neon.tech/football?sslmode=require"

# Current season (update each year)
CURRENT_SEASON = "2025/26"

# Optional: API keys (only needed if running batch jobs locally)
# FOOTBALL_DATA_API_KEY = "your_key_here"
# ODDS_API_KEY = "your_key_here"
# ANTHROPIC_API_KEY = "your_key_here"
