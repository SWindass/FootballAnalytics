# Database connection (Supabase PostgreSQL)
# Get this from: Supabase Dashboard > Project Settings > Database > Connection string
DATABASE_URL_SYNC = "postgresql://postgres.[PROJECT-ID]:[PASSWORD]@aws-0-eu-west-2.pooler.supabase.com:6543/postgres"

# Optional: API keys (only needed if dashboard fetches live data)
# FOOTBALL_DATA_API_KEY = "your_key_here"
